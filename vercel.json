
{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/test", "destination": "/api/test.js" },
    { "source": "/api/health", "destination": "/api/index.js" },
    { "source": "/api/debug-ai", "destination": "/api/index.js" },
    { "source": "/api/whatsapp", "destination": "/api/index.js" },
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ]
}
